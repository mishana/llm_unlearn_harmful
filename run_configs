--max_unlearn_steps=1000


##### Unlearning Harmfulness

### OPT-1.3b

# GA:
python unlearn_harm.py --batch_size=2 --bad_weight=0.5 --no_mismatch --random_weight=1 --lr=2e-5 --model_name=facebook/opt-1.3b --model_save_dir=models/opt_1.3b_unlearn_harm --log_file=logs/opt_1.3b_unlearn_harm.log
--batch_size=2
--bad_weight=0.5
--no_mismatch
--random_weight=1
--lr=2e-5
--model_name=facebook/opt-1.3b
--model_save_dir=models/opt_1.3b_unlearn_harm
--log_file=logs/opt_1.3b_unlearn_harm.log

